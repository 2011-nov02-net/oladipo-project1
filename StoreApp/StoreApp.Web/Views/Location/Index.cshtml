@model IEnumerable<StoreApp.Library.Location>

@{
    ViewData["Title"] = "Index";
}


<h1> Locations</h1>

<h3>Here are Our Locations</h3>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Location List</h2>
        </div>
    </div>

    <br /><br />


    <table class="table table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model)
            {
            <tr>
                <th scope="row">@location.LocationId</th>
                <td><a asp-area="" asp-controller="Location" asp-action="Details" asp-route-id="@location.LocationId"> @location.Name</a></td>
                <td>@location.Address</td>
                <td>@location.City</td>
                <td>@location.State</td>
            </tr>
            }
        </tbody>
    </table>

    <div class="col-6">
        <div>
        <a asp-action="Create" asp-controller="Location" class="btn btn-secondary">Add a new Location</a>
        </div>
        <div>
            <a asp-action="Create" asp-controller="Order" class="btn btn-primary">Place Order</a>
        </div>
    </div>

</div>
