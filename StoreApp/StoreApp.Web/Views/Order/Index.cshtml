@model IEnumerable<StoreApp.DataModel.Order>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Orders</h2>
        </div>
    </div>

    <br /><br />


    <table class="table table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    Order Id
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Date
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <th scope="row">@order.OrderId</th>
                    <td>@(order.Customer.FirstName + " " + order.Customer.LastName)</td>
                    <td>@order.Date</td>
                    <td><a asp-area="" asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-primary">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="Order" class="btn btn-primary">Place Order</a>
</div>
