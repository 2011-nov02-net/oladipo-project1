@model dynamic
@{
    ViewData["Title"] = "Details";
}


 @{ 
     decimal total = 0;
        foreach (var order in Model.OrderDetails)
        {
            total += (order.Product.Price * order.Quantity);

        }
    }
 
<h1> Order's Details</h1>



<div>
    <h3></h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Number:
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderId
        </dd>
        <dt class="col-sm-2">
            Customer Name:
        </dt>
        <dd class="col-sm-10">
            @(Model.Order.Customer.FirstName + " " + Model.Order.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            Customer Email:
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Customer.Email
        </dd>
        <dt class="col-sm-2">
            Total:
        </dt>
        <dd class="col-sm-10">
           $ @total
        </dd>
    </dl>
    <br /><br />


    <table class="table table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Id
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.OrderDetails)
            {
            <tr>
                <th scope="row">@order.ProductId</th>
                <td>@order.Product.Name</td>
                <td>@order.Product.Price</td>
                <td>@order.Quantity</td>
            </tr>
            }
        </tbody>
    </table>
</div>

<hr />
<div>
   <a asp-action="AddItem" asp-controller="Order"asp-route-id="@Model.Order.OrderId">Add Products</a> 
</div>
