@model StoreApp.Web.Models.OrderViewModel

@{
    ViewData["Title"] = "Create";
}


<h2>Create Order</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <dl class="row">
             
                <dt class="col-sm-2">
                    Customer Name:
                </dt>
                <dd class="col-sm-10">
                    <select asp-for="Location" class="form-control" id="locationSelect">
                        @foreach (var location in Model.Locations)
                        {
                        <option value=@Model.Customer.CustomerId>@(Model.Customer.FirstName + " " + Model.Customer.LastName)</option>
                        }
                    </select>
                    
                </dd>
                <dt class="col-sm-2">
                    Customer Email:
                </dt>
                <dd class="col-sm-10">
                    @Model.Customer.Email
                </dd>
            </dl>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="locationSelect">Select location</label>
                <select asp-for="Location" class="form-control" id="locationSelect">
                    @foreach (var location in Model.Locations)
                    {
                        <option value=@location.LocationId>@location.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
