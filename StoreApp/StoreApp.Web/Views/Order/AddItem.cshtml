@model StoreApp.Web.Models.OrderDetailViewModel;

@{
    ViewData["Title"] = "Add Item";
}

<h1>Add a Product To Order </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="OrderId" class="control.label">Order Id:</label>
                <input type="hidden" asp-for="OrderId" id="orderId" name="OrderId" value="@Model.OrderId" readonly />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ProductId">Select Product</label>
                <select id="ProductId" asp-for="ProductId" class="form-control">
                    @foreach (var product in Model.Products)
                    {
                        <option value=@product.ProductId>@product.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" id="quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.OrderId">Back to order details</a>
</div>