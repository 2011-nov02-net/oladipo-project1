@model IEnumerable<StoreApp.Library.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
    </div>

    <br /><br />

    <form asp-controller="Customer" asp-action="Index" method="get">
        <p>
            Full Name: <input type="text" name="SearchString">
            <input type="submit" value="Search" />
        </p>
    </form>


    <table class="table table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    Customer Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <th scope="row">@customer.CustomerId</th>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>

                </tr>
            }
        </tbody>
    </table>

    <div class="col-6">
        <a asp-action="Create" asp-controller="Customer" class="btn btn-secondary">Add a new Customer</a>
    </div>

</div>