@model IEnumerable<StoreApp.Library.Product>

@{
    ViewData["Title"] = "Index";
}


<h1> Products</h1>

<h3>Here are all the Products we Sell</h3>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
    </div>

    <br /><br />


    <table class="table table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@product.ProductId</th>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-6">
        <a asp-action="Create" asp-controller="Product" class="btn btn-secondary">Add a new Product</a>
    </div>

    </div>
